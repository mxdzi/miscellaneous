Host *
	ServerAliveInterval 30
	ServerAliveCountMax 5

# gitlab.com
Host gitlab.com
	PreferredAuthentications publickey
	IdentityFile ~/.ssh/id_rsa
	User git

# github.com
Host github.com
	PreferredAuthentications publickey
	IdentityFile ~/.ssh/id_rsa
	User git

Host HOST_ALIAS
	HostName IP_OR_HOSTNAME
	PreferredAuthentications publickey
	IdentityFile ~/.ssh/id_rsa
	User USERNAME
